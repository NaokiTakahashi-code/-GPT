import { useState } from "react";

export default function DiagnosticApp() {
  const [inputText, setInputText] = useState("");
  const [result, setResult] = useState("");
  const [loading, setLoading] = useState(false);

  async function handleSubmit(e) {
    e.preventDefault();
    setLoading(true);
    setResult("");

    const response = await fetch("/api/diagnose", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        messages: [
          {
            role: "system",
            content: `ã‚ãªãŸã¯ã€åŒ»å­¦ç”Ÿãƒ»ç ”ä¿®åŒ»å‘ã‘ã®æ§‹é€ åŒ–è¨ºæ–­æ”¯æ´AIã§ã™ã€‚\nEBMã¨NBMã®è¦–ç‚¹ã‹ã‚‰ã€è¨ºæ–­æ¨è«–ã‚’è¡Œã£ã¦ãã ã•ã„ã€‚å‡ºåŠ›ã¯æ•™è‚²ç›®çš„ã§ã™ã€‚...ï¼ˆç•¥ï¼‰`
          },
          { role: "user", content: inputText }
        ]
      }),
    });

    const data = await response.json();
    setResult(data.result);
    setLoading(false);
  }

  return (
    <div className="p-8 max-w-2xl mx-auto">
      <h1 className="text-2xl font-bold mb-4">Naokiå¼ è¨ºæ–­æ”¯æ´GPT</h1>
      <form onSubmit={handleSubmit} className="space-y-4">
        <textarea
          className="w-full p-4 border rounded-lg shadow"
          rows={6}
          placeholder="å¹´é½¢ãƒ»æ€§åˆ¥ã€ä¸»è¨´ã€ãƒã‚¤ã‚¿ãƒ«ã€ç”Ÿæ´»æ­´ã€NBMè¦–ç‚¹ãªã©ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„"
          value={inputText}
          onChange={(e) => setInputText(e.target.value)}
        />
        <button type="submit" className="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700" disabled={loading}>
          {loading ? "è¨ºæ–­ä¸­..." : "è¨ºæ–­ã™ã‚‹"}
        </button>
      </form>
      {result && (
        <div className="mt-6 p-4 border rounded-lg bg-gray-50 whitespace-pre-wrap">
          <h2 className="font-semibold mb-2">è¨ºæ–­çµæœï¼š</h2>
          <p>{result}</p>
        </div>
      )}
    </div>
  );
}

// -------------------------------
// ğŸ“ /pages/api/diagnose.ts
// -------------------------------
import { NextApiRequest, NextApiResponse } from 'next';
import OpenAI from 'openai';

const openai = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY,
});

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Method not allowed" });
  }

  const { messages } = req.body;

  try {
    const chatResponse = await openai.chat.completions.create({
      model: "gpt-4-turbo",
      messages,
    });

    const result = chatResponse.choices[0]?.message?.content || "No response";
    res.status(200).json({ result });
  } catch (error) {
    console.error("GPT API error:", error);
    res.status(500).json({ result: "ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚" });
  }
}

